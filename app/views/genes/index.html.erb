<h1>Genes</h1>

<table>
  <tr>
    <th>Symbol</th>
    <th>Name</th>
    <th>Chromosome</th>
    <th>Map location</th>
    <th>Articles</th>
  </tr>

<% @genes.each do |gene| %>
  <tr>
    <td><%= link_to(gene.symbol, gene) %></td>
    <td><%= gene.name %></td>
    <td><%= gene.chromosome %></td>
    <td><%= gene.map_location %></td>
    <td class="number"><%= number_with_delimiter(gene.articles_count) %></td>
  </tr>
<% end %>
</table>

<%= paginate @genes %>